<% if (!head && !(has_config('plugins.gallery') && get_config('plugins.gallery') === false)) { %>
<script src="//cdn.jsdelivr.net/npm/lightgallery@1.6.8/dist/js/lightgallery-all.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/justifiedGallery@3.6.5/dist/js/jquery.justifiedGallery.min.js"></script>
<script>
    (function ($) {
        $(document).ready(function () {
            if (typeof($.fn.lightGallery) === 'function') {
                $('.article.gallery').lightGallery({ selector: '.gallery-item' });
            }
            if (typeof($.fn.justifiedGallery) === 'function') {
                $('.justified-gallery').justifiedGallery();
            }
        });
    })(jQuery);
</script>
<% } %>